<?xml version="1.0" encoding="UTF-8"?>
<project name="builder.global" default="default" basedir=".">
    <description>
            Global Builder
    </description>
	
	<property name="version" value="0.1.0"/>

    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default">
    	<mkdir dir="output"/>
    	<zip basedir="global" file="output/builder.global-${version}.zip">
    	</zip>
    </target>

	<!-- ================================= 
          target: clean
         ================================= -->
    <target name="clean">
    	<delete dir="output" failonerror="false"/>
    </target>
	
</project>
